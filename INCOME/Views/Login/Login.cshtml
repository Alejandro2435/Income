
@{
    ViewBag.Title = "Login";
}


<head>

    <link rel="stylesheet" type="text/css" href="~/Css/Login.css">
    <link href="~/Assets/pnotify/pnotify.custom.min.css" rel="stylesheet" />
    <script src="~/assets/pnotify/pnotify.custom.min.js"></script>

    <style>
        .abs-center {
            display:flex;
            justify-content: center;
            min-height: 35vh;
        }
    </style>

</head>
<body style="background-color:#33333d">
    <div class="container-fluid">
        <div class="row">
            <img src="~/Imagenes/Logo.png" width="150" height="150">
        </div>
    </div>


    <div class="abs-center">
        <form name="ValidateUser" method="post">

            <center>
                <img src="@Url.Content("~/Imagenes/User.png")" width="100" height="100">
                <h2><b style="color:white">Bienvenido</b></h2>
                <!--TEXTBOX CON USUARIO Y CONTRASENA-->

                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    <input id="User" type="text" class="form-control" name="User" placeholder="Usuario o Correo" style="width:300px;height:40px; font-size:medium">
                </div>
                <br />
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <input id="Password" type="password" class="form-control" name="Password" placeholder="Contraseña" style="height:40px; font-size:medium">
                </div>

                <br />
                <button type="submit" class="btn btn-danger btn-block">
                    <span class="glyphicon glyphicon-log-in"></span> Iniciar Sesion
                </button>
                <br />
            </center>

        </form>
    </div>
    <div>
        <center>
            <table>
                <tr>
                    <td style="width:200px">   <a href="" style="color:white">Registrarte</a>  </td>
                    <td style="width:200px;text-align:right">  <a href="" style="color:white">¿Olvidaste tu contraseña?</a>  </td>
                </tr>
            </table>
        </center>
    </div>


    <script src="~/Scripts/Login/Login.js"></script>
</body>